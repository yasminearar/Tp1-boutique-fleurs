{% extends "layouts/base.twig" %}

{% block title %}{{ pageTitle }} - Fleurs & Plantes{% endblock %}

{% block content %}
    <div class="breadcrumb">
        <a href="{{ BASE_URL }}/"><i class="fas fa-home"></i> Accueil</a> &gt;
        <a href="{{ BASE_URL }}/plantes"><i class="fas fa-seedling"></i> Plantes</a> &gt;
        <span><i class="fas fa-search"></i> Recherche</span>
    </div>

    <div class="page-header">
        <h2><i class="fas fa-search"></i> {{ pageTitle }}</h2>
        <a href="{{ BASE_URL }}/plantes" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour à toutes les plantes</a>
    </div>

    <div class="filters">
        <div class="row">            <div class="col-md-6">
                <h4 class="filter-section-title"><i class="fas fa-search"></i> Recherche</h4>
                <form action="{{ BASE_URL }}/plantes/search" method="get" class="search-form">
                    <div class="form-group">
                        <input type="text" name="q" placeholder="Rechercher une plante..." class="form-control" value="{{ keyword|default('') }}">
                        <!-- Conserver la catégorie dans la recherche si une est sélectionnée -->
                        {% if current_categorie %}
                            <input type="hidden" name="categorie" value="{{ current_categorie }}">
                        {% endif %}
                        <button type="submit" class="btn btn-search"><i class="fas fa-search"></i></button>
                    </div>
                </form>
            </div><div class="col-md-6">
                <h4 class="filter-section-title"><i class="fas fa-filter"></i> Catégories</h4>
                <div class="category-filter">
                    <select name="categorie" onchange="window.location.href=this.value" class="form-control category-select">
                        <option value="" disabled {% if not current_categorie %}selected{% endif %}>Sélectionner une catégorie</option>
                        <option value="{{ BASE_URL }}/plantes/search?q={{ keyword }}" {% if current_categorie == 0 %}selected{% endif %}>Toutes les catégories</option>
                        {% for cat in categories ?? [] %}
                            <option value="{{ BASE_URL }}/plantes/search?q={{ keyword }}&categorie={{ cat.id }}" 
                                    {% if current_categorie == cat.id %}selected{% endif %}>
                                {{ cat.nom }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        
        <div class="active-filters">
            <span class="active-filter">
                <i class="fas fa-search"></i> Recherche: "{{ keyword }}"
                <a href="{{ BASE_URL }}/plantes{% if current_categorie %}?categorie={{ current_categorie }}{% endif %}" class="remove-filter">
                    <i class="fas fa-times-circle"></i>
                </a>
            </span>
            
            {% if current_categorie %}
                <span class="active-filter">
                    <i class="fas fa-tag"></i> Catégorie: 
                    {% for cat in categories ?? [] %}
                        {% if cat.id == current_categorie %}
                            {{ cat.nom }}
                        {% endif %}
                    {% endfor %}
                    <a href="{{ BASE_URL }}/plantes/search?q={{ keyword }}" class="remove-filter">
                        <i class="fas fa-times-circle"></i>
                    </a>
                </span>
            {% endif %}
            
            <a href="{{ BASE_URL }}/plantes" class="clear-filters">Effacer tous les filtres</a>
        </div>
    </div>

    {% if plantes is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Aucune plante trouvée pour votre recherche.
        </div>
    {% else %}
        <p class="search-results-count">{{ plantes|length }} résultat{{ plantes|length > 1 ? 's' : '' }} trouvé{{ plantes|length > 1 ? 's' : '' }}</p>
        
        <div class="plantes-grid">
            {% for plante in plantes %}
                <div class="plante-card">
                    <div class="plante-image">
                        {% if plante.image_url %}
                            <img src="{{ ASSETS_URL }}/images/plantes/{{ plante.image_url }}" alt="{{ plante.nom }}">
                        {% elseif plante.image %}
                            <img src="{{ ASSETS_URL }}/images/plantes/{{ plante.image }}" alt="{{ plante.nom }}">
                        {% else %}
                            <img src="{{ ASSETS_URL }}/images/plantes/placeholder.jpg" alt="Pas d'image">
                        {% endif %}
                    </div>
                    <div class="plante-content">
                        <h3>{{ plante.nom }}</h3>
                        <p class="plante-category">{{ plante.categorie_nom ?? 'Non catégorisé' }}</p>
                        <p class="plante-price">{{ plante.prix }} $</p>
                        <div class="plante-stock {% if plante.stock <= 0 %}out-of-stock{% endif %}">
                            {% if plante.stock > 0 %}
                                Stock: {{ plante.stock }}
                            {% else %}
                                Rupture de stock
                            {% endif %}
                        </div>
                        <div class="plante-actions">
                            <a href="{{ BASE_URL }}/plante/{{ plante.id }}" class="btn btn-sm btn-secondary">
                                <i class="fas fa-eye"></i> Détails
                            </a>
                            <a href="{{ BASE_URL }}/plante/{{ plante.id }}/edit" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
