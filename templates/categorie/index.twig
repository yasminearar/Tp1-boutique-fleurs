{% extends "layouts/base.twig" %}

{% block title %}Liste des catégories - Fleurs & Plantes{% endblock %}

{% block content %}
    <div class="breadcrumb">
        <a href="{{ BASE_URL }}/"><i class="fas fa-home"></i> Accueil</a> &gt;
        <span>Catégories</span>
    </div>

    <div class="page-header">
        <h2><i class="fas fa-tags"></i> Liste des catégories</h2>
        {% if user is defined and user and user.privilege == 'admin' %}
            <a href="{{ BASE_URL }}/categorie/create" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter une catégorie</a>
        {% endif %}
    </div>

    {% if categories is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Aucune catégorie trouvée.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Nombre de plantes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td>{{ categorie.id }}</td>
                            <td><a href="{{ BASE_URL }}/categorie/{{ categorie.id }}" class="category-link">{{ categorie.nom }}</a></td>
                            <td>
                                {% if categorie.description %}
                                    {{ categorie.description|length > 50 ? categorie.description|slice(0, 50) ~ '...' : categorie.description }}
                                {% else %}
                                    <em class="text-muted">—</em>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge {{ (categorie.nombre_plantes ?? 0) > 0 ? 'badge-success' : 'badge-secondary' }}">
                                    {{ categorie.nombre_plantes ?? 0 }}
                                </span>
                            </td>
                            <td class="action-buttons">
                                <a href="{{ BASE_URL }}/categorie/{{ categorie.id }}" class="btn btn-sm btn-info" title="Voir détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                {% if user is defined and user and user.privilege == 'admin' %}
                                    <a href="{{ BASE_URL }}/categorie/{{ categorie.id }}/edit" class="btn btn-sm btn-primary" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
