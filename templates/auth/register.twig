{% extends "layouts/base.twig" %}

{% block title %}Inscription - Boutique de Plantes{% endblock %}

{% block body_class %}auth-page register-page{% endblock %}

{% block content %}
    <div class="breadcrumb">
        <a href="{{ BASE_URL }}/"><i class="fas fa-home"></i> Accueil</a> &gt;
        <span>Inscription</span>
    </div>

    <div class="page-header">
        <h2><i class="fas fa-user-plus"></i> Inscription</h2>
        <p>Créez votre compte pour accéder à l'administration</p>
    </div>

    <div class="form-container">
        <form method="POST" action="{{ BASE_URL }}/register" class="form">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name" class="form-label-lg mb-2">
                        <i class="fas fa-id-card"></i> Nom complet *
                    </label>
                    <input type="text" id="name" name="name" 
                           class="form-control form-control-lg py-3" 
                           style="height: auto; font-size: 1.1rem;" 
                           placeholder="Votre nom complet" 
                           required>
                </div>
                
                <div class="form-group col-md-6">
                    <label for="username" class="form-label-lg mb-2">
                        <i class="fas fa-user"></i> Nom d'utilisateur *
                    </label>
                    <input type="text" id="username" name="username" 
                           class="form-control form-control-lg py-3" 
                           style="height: auto; font-size: 1.1rem;" 
                           placeholder="Votre nom d'utilisateur" 
                           required>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="email" class="form-label-lg mb-2">
                        <i class="fas fa-envelope"></i> Email *
                    </label>
                    <input type="email" id="email" name="email" 
                           class="form-control form-control-lg py-3" 
                           style="height: auto; font-size: 1.1rem;" 
                           placeholder="Votre adresse email" 
                           required>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="password" class="form-label-lg mb-2">
                        <i class="fas fa-lock"></i> Mot de passe *
                    </label>
                    <input type="password" id="password" name="password" 
                           class="form-control form-control-lg py-3" 
                           style="height: auto; font-size: 1.1rem;" 
                           placeholder="Mot de passe (min. 6 caractères)" 
                           required>
                </div>
                
                <div class="form-group col-md-6">
                    <label for="password_confirm" class="form-label-lg mb-2">
                        <i class="fas fa-lock"></i> Confirmer le mot de passe *
                    </label>
                    <input type="password" id="password_confirm" name="password_confirm" 
                           class="form-control form-control-lg py-3" 
                           style="height: auto; font-size: 1.1rem;" 
                           placeholder="Confirmez votre mot de passe" 
                           required>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> S'inscrire
                </button>
                <a href="{{ BASE_URL }}/login" class="btn btn-secondary">
                    <i class="fas fa-sign-in-alt"></i> Se connecter
                </a>
            </div>
        </form>
    </div>
{% endblock %}
