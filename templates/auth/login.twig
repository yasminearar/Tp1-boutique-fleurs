{% extends "layouts/base.twig" %}

{% block title %}Connexion - Boutique de Plantes{% endblock %}

{% block body_class %}auth-page login-page{% endblock %}

{% block content %}
    <div class="login-wrapper">
        <div class="login-container">
            <div class="login-header">
                <h2><i class="fas fa-sign-in-alt"></i> Connexion</h2>
                <p>Connectez-vous à votre compte pour accéder à l'administration</p>
            </div>
            
            <div class="login-form-container">
                <form method="POST" action="{{ BASE_URL }}/authenticate" class="login-form">
                    <div class="form-group">
                        <label for="username">
                            <i class="fas fa-user"></i> Nom d'utilisateur ou Email
                        </label>
                        <input type="text" id="username" name="username" 
                               placeholder="Votre nom d'utilisateur ou email" 
                               required>
                    </div>
                    
                    <div class="form-group">
                        <label for="password">
                            <i class="fas fa-lock"></i> Mot de passe
                        </label>
                        <input type="password" id="password" name="password" 
                               placeholder="Votre mot de passe" 
                               required>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn-login-submit">
                            <i class="fas fa-sign-in-alt"></i> Se connecter
                        </button>
                    </div>
                    
                    <div class="auth-separator">
                        <p>Vous n'avez pas encore de compte ?</p>
                        <a href="{{ BASE_URL }}/register" class="btn-register-link">
                            <i class="fas fa-user-plus"></i> S'inscrire maintenant
                        </a>
                    </div>
                </form>
            </div>
            
            <div class="login-footer">
                <a href="{{ BASE_URL }}/" class="back-to-home">
                    <i class="fas fa-arrow-left"></i> Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
{% endblock %}
